{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "@sut/frontend-shared/*": ["./../../../packages/frontend-shared/src/*"],
      "@sut/integrations-shared/*": ["./../../../packages/integrations-shared/src/*"],
      "@sut/kk-ui/*": ["./../../../packages/kk-ui/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./@types/**/*.d.ts",
    "./../../../packages/frontend-shared/src/**/*.ts",
    "./../../../packages/frontend-shared/src/**/*.tsx",
    "./../../../packages/integrations-shared/src/**/*.ts",
    "./../../../packages/kk-ui/src/**/*.ts",
    "./../../../packages/kk-ui/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
